<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div>
    <h3 style="color: red"><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, url:"/books/#{@book.id}", local: true do |f| %>
  <div>
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div>
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

  <%= link_to "Show", book_path(@book.id) %>
   |
  <%= link_to "Back", books_path %>
