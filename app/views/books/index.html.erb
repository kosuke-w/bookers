
  <h1 class="heading">
    Books
  </h1>
  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <p><%= book.title %></p>
      <span><%= book.body %></span>
    <% end %>
  </table>
  
  <h2>New book</h2>
  <%= form_with model: @book, url:"/books", local:true do |f| %>
  
    <p>title</p>
    <%= f.text_field :title %>
    <p>body</p>
    <%= f.text_area :body %>
    <%= f.submit "create book" %>
  <% end %>

